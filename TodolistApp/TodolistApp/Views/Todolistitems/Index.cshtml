@model TodolistApp.Models.TodolistCategoryViewModel

@{
    ViewData["Title"] = "Index";
}
<p class="create_link">
    <a asp-action="Create">Create New Item</a>
</p>

<form asp-controller="Todolistitems" asp-action="Index" method="get">
    <p>
        <select asp-for="todolistCategory" asp-items="Model.categories">
            <option value="">All Categories</option>
        </select>
        <br/><br />
        <
        
        type="text" name="SearchString" placeholder="  search by title">
        <input type="submit" value="Search" />
    </p>
</form>
<br/><br /><br />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.todolist[0].Title)
                 </th>
                <th>
                    @Html.DisplayNameFor(model => model.todolist[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.todolist[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.todolist[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.todolist[0].TimeTaken)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.todolist)
{ 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeTaken)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
